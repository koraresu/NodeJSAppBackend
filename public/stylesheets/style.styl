html
	margin 0
	width 100%
	height 100%
body
	margin 0
	padding 0
	width 100%
	min-height 100%
	font-size 16px
	font-family 'Roboto', sans-serif
	background-color #FFF
	.cont
		background-color #FFF
		max-width 800px
		padding 20px 54px
		margin 0 auto
		min-width 300px
		.content
			.header
				border 0
				text-align center
				a
					img
						width 100%
						max-width 270px
			.main
				margin-top 78px
				.alert
					background-color #F2F2F2
					border 1px solid #E6E6E6
					.icon
						display inline-block
						vertical-align top
						img
							height 51px
					.message
						display inline-block
						vertical-align top
						padding 16px
						box-sizing border-box
						font-weight 300
						text-decoration none
						b
							font-weight 100
						i
							font-style normal
							color #F7A800
							display inline
							padding 0 5px
@media (max-width 600px)
	body
		.cont
			padding 20px 10px
@media (max-width 300px)
	body
		.cont
			padding 20px 0