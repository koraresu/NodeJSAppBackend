html
	margin 0
	width 100%
	height 100%
body
	margin 0
	padding 0
	width 100%
	min-height 100%
	font-size 16px
	font-family 'Roboto', sans-serif
	background-color #FFF
	.cont
		background-color #FFF
		max-width 800px
		padding 20px 54px
		margin 0 auto
		min-width 300px
		.content
			.header
				border 0
				text-align center
				a
					img
						width 100%
						max-width 270px
			.main
				margin-top 78px
				.alert
					background-color #F2F2F2
					border 1px solid #E6E6E6
					.icon
						display inline-block
						vertical-align top
						img
							height 51px
					.message
						display inline-block
						vertical-align top
						padding 16px
						box-sizing border-box
						font-weight 300
						text-decoration none
						b
							font-weight 100
						i
							font-style normal
							color #F7A800
							display inline
							padding 0 5px
			.forgot
				form
					.name
						font-size 25px
						padding 10px 0
						span
							display inline
							padding-right 5px
						strong
							color #f2a900
							font-weight normal
					label
						background-color #f2f2f2
						padding 10px 0
						input
								border: 0;
								border-bottom: 1px solid rgba(35,34,34,0.5);
								display: block;
								border-radius: 0;
								background-color: transparent;
								font-size: 13px;
								width: 100%;
								box-sizing: border-box;
								font-weight: 100;
								padding: 9px;
								position: relative;
								z-index: 10;
					input[type="button"]
					input[type="submit"]
						background-color: #f6be00;
						font-size: 18px;
						color: #fff;
						padding: 7px 5px;
						font-weight: 200;
						text-align: center;
						border-radius: 4px;
						border: 0;
						display: block;
						box-sizing: border-box;
						width: 100%
						margin-top 15px
							
@media (max-width 600px)
	body
		.cont
			padding 20px 10px
@media (max-width 300px)
	body
		.cont
			padding 20px 0