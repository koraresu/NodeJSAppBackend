html
body
	height 100%
	margin 0
	padding 0
#conversations
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	background-color #FFF
	ul
		li
			a
				display block
#messages
	height calc(100% - 100px)
	overflow hidden
	overflow-y scroll
	.message
		padding 5px
		position relative
		min-height 50px
		.profile_pic
			display block
			visibility hidden
			background-color #000
			width 50px
			height 50px
			position absolute
			top 0
			img
				display none
		.element
			display block
			.username
				font-size 12px
			.text
				background-color gray
				padding 10px
				max-width 50%
				display inline-block
				color #FFF
		&.yours
			text-align left
			.profile_pic
				left 0
			.element
				margin-left 50px
				.text
					background-color #81DAF5
		&.other
			text-align right
			.profile_pic
				right 0
			.element
				margin-right 50px
				.text
					background-color #D8D8D8
					color #585858
form
	width 100%
	padding 0
	margin 0
#message
	height 100px
	display block
	width 100%
	box-sizing border-box