html
	margin 0
	width 100%
	height 100%
body
	margin 0
	padding 0
	width 100%
	min-height 100%
	font-size 16px
	font-family 'Roboto', sans-serif
	background #363636 url('http://192.241.245.98:3000/images/bg.png') repeat
	.block
		padding 10px
		.cont
			background-color #FFF
			max-width 600px
			margin 0 auto
			padding 20px 54px
			.content
				.header
					border 0
					text-align center
					a
						img
							width 100%
							max-width 370px
				.main
					margin-top 30px
					.list
						.element
							.titulo,.subtitulo
								font-weight 300
							.titulo
								border 0
								font-size 24px
							.subtitulo
								border 0
								color #F9BE00
								font-size 40px
								width 100%
								max-width 300px
								display block
								margin-bottom 20px
							&.boton
								text-align center
								span
									font-weight 300
									font-size 16px
								a.verify
									display block
									width 178px
									margin 0 auto
									margin-top 20px
									border 0
									background-color #F6BE00
									color #FFF
									font-weight 500
									font-size 18px
									padding 12px 15px
									border-radius 4px
									text-decoration none
									border 1px solid #F7A700
				.footer
					border 0
					color #808080
					font-weight 300
					font-size 16px
					margin-top 30px
					.list
						.element
							padding 11px 0
							text-align center
							color #808080
							a
								text-decoration none
								display block
								color #808080
								word-wrap break-word
								&.email
									display inline-block
									color #F7A700
							span
								&.divider
								a
									border 0
							&.last
								span
									&.divider
										padding 0 10px
								a
									display inline-block
									color #F7A700


@media screen and (max-width: 4000px)
	.cont
		padding 20px 54px
@media screen and (max-width: 600px)
	body
		.cont
			padding 20px 30px
			.content
				.main
					.list
						.element
							.titulo,.subtitulo
								display block
								max-width 100%
								text-align center
							&.boton
								span
									display block
		.footer
			.list
				.element
					span.divider
						background-color #F6BE00
						width 50%
						display block
						margin 8px auto
						height 2px
						overflow hidden
@media screen and (max-width: 400px)
	body
		.cont
			padding 20px 30px
			.content
				.main
					.list
						.element
							.titulo,.subtitulo
								display block
								max-width 100%
								text-align center
							&.boton
								span
									display block
				.footer
					.list
						.element
							span.divider
								background-color #F6BE00
								width 50%
								display block
								margin 8px auto
								height 2px
								overflow hidden
			




@media screen and (max-width: 300px)
	body
		.cont
			padding 20px
			.content
				.main
					.list
						.element
							&.boton
								span
									display block
								a
									&.verify
										margin-top 10px
										display block
										width auto
										box-sizing border-box
				.footer
					.list
						.element
							span.divider
								background-color #F6BE00
								width 50%
								display block
								margin 8px auto
								height 2px
								overflow hidden
			


