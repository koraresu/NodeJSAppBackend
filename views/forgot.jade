doctype transitional
html(xmlns='http://www.w3.org/1999/xhtml')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
    meta(http-equiv="X-UA-Compatible",content="IE=edge")
    link(href='https://fonts.googleapis.com/css?family=Roboto:300,500', rel='stylesheet' type='text/css')
    style(type="text/css"): include ../public/stylesheets/style.css
    link(rel="shortcut icon",href="http://thehiveapp.mx/favicon.ico",type="image/x-icon")
    link(rel="icon",href="http://thehiveapp.mx/favicon.ico",type="image/x-icon")
    title TheHive
  body
    div.cont
      div.content
        div.header
          a(href="#")
            img(src="../images/logo.png",alt="TheHive")
        div.forgot
            form(method="post",action="http://thehiveapp.mx:3000/forgot/thanks")
                input(type="hidden",name="generated", value="#{generated}")
                if(password_again)
                if password_again && password_again.length
                    strong #{password_again}

                div.name
                    span Hola
                    strong #{nombre}
                label(style="display:block;")
                    span Contraseña:
                    input(type="text",name="password",id="password")
                label(style="display:block;")
                    span Confirmar contraseña:
                    input(type="text",name="password_again")
                input(type="submit",value="Cambiar Contraseña")
    script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js")
    script(type="text/javascript", src="/javascripts/jquery.validate.min.js")
    script(type="text/javascript", src="/javascripts/forgot.js")